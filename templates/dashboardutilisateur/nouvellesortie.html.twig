{% extends 'basesidebar.html.twig' %}

{% block body %}

<div class="liens">
	<a class="retour" href="{{ path('accueil') }}">
		Retour Ã  la page d'accueil
	</a>
	<a class="deco" href="{{ path('app_logout') }}">
		Deconnexion
	</a>
</div>
	
<div class="imgutilisateur">
	<img src="{{app.user.avatar}}" alt="profil utilisateur">
</div>


<div class="container3">
	<div class="ajoutsortie">

		<h1>
			Ajouter une nouvelle sortie
		</h1>

		<div class="container4">
			<div class="formulaireajout">

				{{ form_start(form) }}
				<div id="date1">
					{{ form_widget(form.date, {'attr': {'placeholder': 'Date de la sortie', 'size':'50'}}) }}
				</div>
				<div id="ville1">
					{{ form_widget(form.ville, {'attr': {'placeholder': 'Lieu de la sortie (ville)', 'size':'50'}}) }}
				</div>
				<div id="adresse1">
					{{ form_widget(form.adresse, {'attr': {'placeholder': 'Adresse de la sortie (rue)', 'size':'50'}}) }}
				</div>
				<div id="image1">
					{{ form_widget(form.image, {'attr': {'placeholder': 'Lien de l\'illustration', 'size':'50'}}) }}
				</div>
				<div id="description1">
					{{ form_widget(form.description, {'attr': {'placeholder': 'Description de la sortie', 'size':'50'}}) }}
				</div>

				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				<div class="boutonajout">
				<a href="{{ path('dashboardsortiesencours')}}"> 
				<button type="submit" class="btn btn-primary"> 
				Ajouter 
				</button> 
				</a>
				</div>
				{{ form_end(form) }}

			</div>
		</div>

	</div>
</div>

{% endblock %}
