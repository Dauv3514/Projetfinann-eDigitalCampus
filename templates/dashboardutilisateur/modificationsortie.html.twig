{% extends 'basesidebar.html.twig' %}

{% block body %}

	<div class="liens">
		<a class="retour" href="{{ path('accueil') }}">
			Retour Ã  la page d'accueil
		</a>
		<a class="deco" href="{{ path('app_logout') }}">
			Deconnexion
		</a>
	</div>

	<div class="imgutilisateur">
		<img src="{{app.user.avatar}}" alt="profil utilisateur">
	</div>

	<div class="container5">
		<div class="modifsortie">

			<h1>
				Modifier la sortie
			</h1>

			<div class="container6">
				<div class="formulairemodif">

					{{ form_start(form) }}
					<div id="date1">
						<p>
							Date
						</p>
						{{ form_widget(form.date, {'attr': {'placeholder': 'Date de la sortie', 'size':'50'}}) }}
					</div>

					<div id="ville1">
						<p>
							Ville
						</p>
						{{ form_widget(form.ville, {'attr': {'placeholder': 'Lieu de la sortie (ville)', 'size':'50'}}) }}
					</div>

					<div id="adresse1">
						<p>
							Adresse
						</p>
						{{ form_widget(form.adresse, {'attr': {'placeholder': 'Lien de lillustration', 'size':'50'}}) }}
					</div>

					<div id="image1">
						<p>
							Image
						</p>
						{{ form_widget(form.image, {'attr': {'placeholder': 'Adresse de la sortie', 'size':'50'}}) }}
					</div>

					<div id="description1">
						<p>
							Description
						</p>
						{{ form_widget(form.description, {'attr': {'placeholder': 'Description de la sortie', 'size':'50'}}) }}
					</div>

					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate')}}">

					{{ form_end(form) }}


				</div>
				<div class="alignerelements">
						<div class="boutonmodif">
							<a href="{{ path('dashboardsortiesencours')}}">
							<button type="submit" class="btn btn-primary">
								Modifier
							</button>
							</a>
						</div>
						{{ include('site/supprimer.html.twig') }}
					</div>				
			</div>
		</div>
	</div>
	</div>

{% endblock %}
