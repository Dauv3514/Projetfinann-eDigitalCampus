{% extends 'basesidebar.html.twig' %}

{% block title %}Hello SiteController!
{% endblock %}

{% block body %}

<div class="liens">

		<a class="retour" href="{{ path('accueil') }}">
			Retour à la page d'accueil
		</a>
		<a class="deco" href="{{ path('app_logout') }}">
			Deconnexion
		</a>

</div>

<div class="imgutilisateur">

		<img src="{{app.user.avatar}}" alt="profil utilisateur">

</div>

<div class="sorties_terminees">
	<h1>
	Mes sorties terminées
	</h1>
</div>
<div class="encours2">
		<div class="centrecontainer">
			<div class="milieucontainer">
				<div class="sortie2">
					<div class="alignement2">
						<div class="sort2">
							{% for sortie in sorties %}
								<div class="sor2">
									<img src="{{sortie.image}}" alt="illustration d'une sortie">
									<p id="datecadrage">
										Le
										{{sortie.date |date('d/m/Y')}}
										à
										{{sortie.date |date('H:i')}}
									</p>
									<p>
										{{sortie.ville}}</p>
									<p>
										{{sortie.description}}
									</p>
									<a href="{{ path('modificationsortie', { 'id': sortie.id })}}">
										<button type="submit" class="btn btn-primary">
											Modifier la sortie
										</button>
									</a>
									<div
										class="message">{# <a href="{{ path('sorties') }}"> <button type="submit" class="btn btn-danger"> Envoyer un message à ... {% for user in users %}{{user.pre}}{% endfor %}</button> </a> #}
									</div>


								</div>
							{% endfor %}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
