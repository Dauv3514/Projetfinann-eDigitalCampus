{% extends 'base.html.twig' %}

{% block title %}Sortie index{% endblock %}

{% block body %}
    <h1>Sortie index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Ville</th>
                <th>Adresse</th>
                <th>Image</th>
                <th>Description</th>
                <th>Datecreationsortie</th>
                <th>Miseajoursortie</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sortie in sorties %}
            <tr>
                <td>{{ sortie.id }}</td>
                <td>{{ sortie.date }}</td>
                <td>{{ sortie.ville }}</td>
                <td>{{ sortie.adresse }}</td>
                <td>{{ sortie.image }}</td>
                <td>{{ sortie.description }}</td>
                <td>{{ sortie.datecreationsortie ? sortie.datecreationsortie|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ sortie.miseajoursortie ? sortie.miseajoursortie|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('sortie_show', {'id': sortie.id}) }}">show</a>
                    <a href="{{ path('sortie_edit', {'id': sortie.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('sortie_new') }}">Create new</a>
{% endblock %}
