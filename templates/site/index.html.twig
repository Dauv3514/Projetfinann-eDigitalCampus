{% extends 'base.html.twig' %}

{% block body %}

	<div class="presentation">
		<div class="accompagne">

			<div class="image1">
				<img src="images/basket.png" alt="une personne handicapée">
			</div>

			<div class="textepres1">
				<div class="cen">
					<h1>
					Accompagné
					</h1>
					<p>
					Je suis une personne en situation de handicap  
					qui souhaite trouver une personne pour
					l’accompagner dans une activité 
					(balade, sorties, voyages etc..)
					</p>

				{% if is_granted('ROLE_USER') %}

					{# Ici le contenu réservé aux utilisateurs connectés #}


				{% else %}

					{# Ici le contenu affiché aux utilisateurs non connectés #}
					<a href="{{ path('connexion') }}">
						<button type="submit" class="btn btn-primary">
							Proposer une sortie
						</button>
					</a>

				{% endif %}
				</div>
			</div>

		</div>

		<div class="accompagnant">

			<div class="textepres2">
				<h1>
					Accompagnant
				</h1>
				<p> Je suis un étudiant, retraité, actif ayant du temps 
					à donner afin d’accompagner une personne en situation 
					de handicap lors d’une activité
				</p>
				{% if is_granted('ROLE_USER') %}

					{# Ici le contenu réservé aux utilisateurs connectés #}

				{% else %}

					{# Ici le contenu affiché aux utilisateurs non connectés #}
				<a href="{{ path('sorties') }}">
					<button type="submit" class="btn btn-primary">
					Voir les sorties proposées <br> par les membres
					</button>
				</a>

				{% endif %}

			</div>

			<div class="image2">
				<img src="images/photo.png" alt="personne accompagnatrice">
			</div>

		</div>
	</div>

	<div class="inscrire">

		{% if is_granted('ROLE_USER') %}

			{# Ici le contenu réservé aux utilisateurs connectés #}
			<div class="dashboard">
				<div class="centre">

					<h1>
						Accompagné ou Accompagnant ?
					</h1>
					<p>
						tu souhaites proposer une sortie sur la plateforme ?
					</p>
					<p>
						c'est possible ici !
					</p>
					<a href="{{ path('dashboard') }}">
						<button type="submit" class="btn btn-primary">
							Proposer une sortie via mon Dashboard
						</button>
					</a>

				</div>
			</div>

		{% else %}

			{# Ici le contenu affiché aux utilisateurs non connectés #}
			<a href="{{ path('inscription') }}">
				<button type="submit" class="btn btn-danger">
					Rejoindre Handi'ACC
				</button>
			</a>

		{% endif %}

	</div>

{% endblock %}
